<ImageView
    android:id="@+id/project_cover_image"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:src="@drawable/sample_image"
    android:scaleType="centerCrop"/>


    <com.rattletech.cityofontario.utilities.TextViewPlus
        android:id="@+id/room_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="The vision (1880 - 1890)"
        android:textColor="@color/app_theme_text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:customFont="OpenSans-CondBold.ttf" />

    <com.rattletech.cityofontario.utilities.TextViewPlus
        android:id="@+id/room_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/room_title_text"
        android:layout_centerHorizontal="true"
        android:text="More"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold"
        app:customFont="OpenSans-CondBold.ttf" />



</RelativeLayout>