<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/layout_margin"
    android:orientation="vertical"
    tools:context="com.rattletech.cityofontario.fragments.CalendarFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rattletech.cityofontario.utilities.TextViewPlus
            android:id="@+id/idMonthDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="October 2017"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            foo:customFont="OpenSans-CondBold.ttf"/>

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:text="@string/next"
            android:textStyle="bold"
            android:background="@drawable/button_rounded_image_blue"
            android:theme="@style/AppTheme.Button_low_Color" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edittext_filter"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:paddingRight="10dp"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_rounded_corner"
            android:drawableRight="@drawable/ic_down_arrow"
            android:ems="10"
            android:gravity="center"
            android:hint="Category"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:editable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <ListView
        android:id="@+id/calendar_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
   />

</LinearLayout>
