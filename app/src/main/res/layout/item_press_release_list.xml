<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.rattletech.cityofontario.utilities.TextViewPlus
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="MUN - Homework Helper"
        android:textColor="@color/app_theme_text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        foo:customFont="OpenSans-CondBold.ttf"
        android:layout_below="@+id/img_logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65">

            <com.rattletech.cityofontario.utilities.TextViewPlus
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="14dp"
                android:text="2017-10-23"
                android:textColor="@color/bb_inActiveBottomBarItemColor"
                android:textSize="18sp"
                android:textStyle="bold"
                foo:customFont="OpenSans-CondBold.ttf" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.35">

            <com.rattletech.cityofontario.utilities.TextViewPlus
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="2dp"
                android:layout_marginTop="14dp"
                android:text="Time - 2:30 PM to 4:30 PM"
                android:textColor="@color/bb_inActiveBottomBarItemColor"
                android:textSize="18sp"
                android:textStyle="bold"
                foo:customFont="OpenSans-CondBold.ttf"
                foo:textAllCaps="false" />
        </LinearLayout>




    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bgColor_overlay" />
</LinearLayout>